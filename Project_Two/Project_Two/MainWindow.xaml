<Window x:Class="Project_Two.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="320" VerticalAlignment="Top" Width="517">
            <TabItem Header="Connecting info">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,0">
                    <Button x:Name="Connect_btn" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Connect_btn_Click"/>
                    <TextBox x:Name="Login_tb" HorizontalAlignment="Left" Height="23" Margin="10,37,0,0" TextWrapping="Wrap" Text="ST51087" VerticalAlignment="Top" Width="75"/>
                    <TextBox x:Name="Password_tb" HorizontalAlignment="Left" Height="23" Margin="10,65,0,0" TextWrapping="Wrap" Text="E04MF5" VerticalAlignment="Top" Width="75"/>
                    <TextBox x:Name="Messages_tb" HorizontalAlignment="Left" Height="268" Margin="90,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="407"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
